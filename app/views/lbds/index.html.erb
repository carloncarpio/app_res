<div class="container">
<h1>LB D</h1>
<br />
<ul class="nav-in">
    <li><%= link_to 'A', {:controller => 'Lbds',:action => 'index'}, :class => 'btn btn-danger' %></li>
    <li><%= link_to 'B', {:controller => 'Lbds',:action => 'index_b'}, :class => 'btn btn-danger' %></li>
    <li><%= link_to 'C', {:controller => 'Lbds',:action => 'index_c'}, :class => 'btn btn-danger' %></li>
    <li><%= link_to 'D', {:controller => 'Lbds',:action => 'index_d'}, :class => 'btn btn-danger' %></li>
    <li><%= link_to 'E', {:controller => 'Lbds',:action => 'index_e'}, :class => 'btn btn-danger' %></li>
    <li><%= link_to 'F', {:controller => 'Lbds',:action => 'index_f'}, :class => 'btn btn-danger' %></li>
    <li><%= link_to 'G', {:controller => 'Lbds',:action => 'index_g'}, :class => 'btn btn-danger' %></li>
    <li><%= link_to 'H', {:controller => 'Lbds',:action => 'index_h'}, :class => 'btn btn-danger' %></li>
    <li><%= link_to 'I', {:controller => 'Lbds',:action => 'index_i'}, :class => 'btn btn-danger' %></li>
</ul>
<br />
<table class="table table-striped">
  <tr>
    <th>Ticket #</th>
    <th>Company Name</th>
    <th>Contact</th>
    <th>Email</th>
    <th>Paid</th>
    <th>Approved</th>
    <% if session[:username] == 'superadmin' %>
        <th></th>
        <th></th>
        <th></th>
    <% end %>   
  </tr>
<% @lbds.each do |lbd| %>
  <tr id='<%= dom_id lbd %>'>
    <td><%= lbd.ticket_num %></td>
    <td><%= lbd.company_name %></td>
    <td><%= lbd.company_contact %></td>
    <td><%= lbd.company_email %></td>
    <% if lbd.paid == 'no' %>
        <td><%= image_tag('cross.png') %></td>
    <% else %>
        <td><%= image_tag('check.png') %></td>
    <% end %>

    <% if lbd.approved == 'no' %>
        <td><%= image_tag('cross.png') %></td>
    <% else %>
        <td><%= image_tag('check.png') %></td>
    <% end %>
        
    
    <% if session[:username] == 'superadmin' %>
        <td><%= link_to 'Show', lbd %></td>
        <td><%= link_to 'Edit', edit_lbd_path(lbd) %></td>
        <td><%= link_to 'Destroy', lbd, confirm: 'Are you sure?', method: :delete, remote: true %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'Main Page', { :controller => 'access',:action => 'public' }, :class => 'btn btn-primary' %>
<%= link_to 'View', {:controller => 'Lbds', :action => 'visual'},:class => 'btn btn-primary' %>

<% if session[:username] == 'admin' %>
    <%= form_for(Lbd.new) do |f| %>
     
      <div class="field">
        <br /><br /><br />
        <h4>Add Seats</h4><br />
        <%= f.label :ticket_num %>
        <%= f.text_field :ticket_num %>
      
        <%= f.label :section %>
        <%= f.text_field :section %>
        <%= f.hidden_field :status, :value => false %>
        <%= f.hidden_field :approved, :value => 'no' %>
        <%= f.hidden_field :paid, :value => 'no' %>
      </div>
      
      <div class="actions">
        <%= f.submit('Create Seat') %>
      </div>
    
    <% end %>
<% end %>
</div>

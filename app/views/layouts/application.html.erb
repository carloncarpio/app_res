<!DOCTYPE html>
<html>
<head>
  <title>Reservation</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>


</head>
<body>
	<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to 'PeopleSparx', {:controller => 'access', :action => 'public'}, :class => 'brand' %>
          <div class="nav-collapse">
            <ul class="nav">
              <% if session[:username] == 'admin' %>
                <li><%= link_to 'Users', :controller => 'Users' %></li>
              <% else %>
                <li><%= link_to 'My Reservations', {:controller => 'company', :action => 'show_comp', :id => session[:id]} %></li>
              <% end %>           
              <!-- nav -->
            </ul>
          </div><!--/.nav-collapse -->
          <% if session[:username] %>
            <div class="welcome">
              <p>Welcome <%= session[:username] %> | <%= link_to 'logout', :controller => 'access',:action => 'logout' %></p>
            </div>
           <% else %>
            <div id="signup"><%= link_to 'Sign Up', signup_path %></div>
           <% end %>
        </div>
      </div>
    </div>
<%= yield %>

</body>
</html>

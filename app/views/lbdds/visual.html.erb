<div class="container">
	<div class="body_content">	
	<h3>Section LB / DD</h3>

	<table id="visual_lbdd">
		<tr>
			<% @lbdds_a.each do |lbdd_a| %>
				<% if lbdd_a.approved == 'yes' %>
					<td class="<%= lbdd_a.status %>"><a><%= lbdd_a.ticket_num %></a></td>
				
				<% else %>
				<td id='<%= dom_id lbdd_a %>' class="<%= lbdd_a.status %>">
					<% if lbdd_a.status == false %>
					<%= link_to lbdd_a.ticket_num, {:controller => 'lbdds', :action => 'update_status', :id => lbdd_a.id}, remote: true %></td>
					<% elsif lbdd_a.status == true && session[:company_name] == lbdd_a.company_name %>
					<%= link_to lbdd_a.ticket_num, {:controller => 'lbdds', :action => 'update_status', :id => lbdd_a.id}, remote: true %></td>		
					<% else %>
						<%= link_to lbdd_a.ticket_num %>
					<% end %>
				<% end %>
			<% end %>		
		</tr>
		
	</table>

	<%= link_to 'Back To List', {:action => 'index'}, :class => 'btn btn-primary' %>

	</div><!-- body_content -->

	<div id="my_reserve">
		<% if session[:username] == 'admin' %>
			<h3>Reservations for this Section</h3>
			<table class="table table-striped">
				<tr>
					<td>Seat</td>
					<td>Company</td>
					<td>Paid</td>
					<td>Approved</td>
				</tr>
			<% @lbdds_with.each do |my| %>
				<tr id='<%= dom_id my %>'>
					<td><%= my.ticket_num %></td>
					<td><%= link_to(my.company_name, :controller => 'company',:action => 'show_comp', :id => my.user_id) %></td>
					<td><% if my.paid == '' %>
						<%= link_to('No') %>
						<% else %>
						<%= link_to('Yes') %>	
						<% end %>
					</td>
					<% if my.approved == 'no' %>
					 <td><%= link_to('Approved', :action => 'approved', :id => my.id) %></td>
					 <% else %>
					 	<td><%= link_to('DisApproved', :action => 'disapproved', :id => my.id) %></td>
					 <% end %>
				</tr>
			<% end %>
			</table>
		<% else %>
			<table class="table table-striped">
				<h4>My Reservation</h4>
					<% if @my_lbdds.empty? %>
						<p>You have no reservation for this section</p>
					<% else %>
					<% @my_lbdds.each do |my| %>
						<tr>
							<td><%= my.ticket_num %> - <%= my.company_name %></td>
						</tr>
					<% end %>
					<% end %>
			</table>
		<% end %>
	</div>

</div><!-- container -->


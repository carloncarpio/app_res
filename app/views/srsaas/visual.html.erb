	<div id="my_reserve_01">
		<% if session[:username] == 'admin' %>
			<h3>Reservations for this Section</h3>
			<table class="table table-striped">
				<tr>
					<td>Seat</td>
					<td>Company</td>
					<td>Paid</td>
					<td>Approved</td>
				</tr>
			<% @srsaas_with.each do |my| %>
				<tr id='<%= dom_id my %>'>
					<td><%= my.ticket_num %></td>
					<td><%= link_to(my.company_name, :controller => 'company',:action => 'show_comp', :id => my.user_id) %></td>
					<td><% if my.paid == 'no' %>
						<%= link_to( image_tag('cross.png') ,{:action => 'paid', :id => my.id}) %>
						<% else %>
						<%= link_to( image_tag('check.png') ,{:action => 'unpaid', :id => my.id}) %>	
						<% end %>
					</td>
					<% if my.approved == 'no' %>
					 <td><%= link_to(image_tag('cross.png'), :action => 'approved', :id => my.id) %></td>
					 <% else %>
					 	<td><%= link_to(image_tag('check.png'), :action => 'disapproved', :id => my.id) %></td>
					 <% end %>
					 
				</tr>
			<% end %>
			</table>
		<% else %>
			<table class="table table-striped">
				<h4>My Reservation</h4>
					<% if @my_srsaas.empty? %>
						<p>You have no reservation for this section</p>
					<% else %>
					<tr>
                        <td>Seat</td>
                        <td>Company</td>
                        <td>Paid</td>
                        <td>Approved</td>
                    </tr>
                    <% @my_srsaas.each do |my| %>
                        <tr>
                            <td><%= my.ticket_num %></td>
                            <td><%= my.company_name %></td>
                            <% if my.paid == 'no' %>
                                <td><%= image_tag('cross.png') %></td>
                            <% else %>
                                <td><%= image_tag('check.png') %></td>
                            <% end %>
                            <% if my.approved == 'no' %>
                             <td><%= image_tag('cross.png') %></td>
                             <% else %>
                                <td><%= image_tag('check.png') %></td>
                             <% end %>
                                </tr>
                            <% end %>
                    <% end %>
			</table>
		<% end %>
